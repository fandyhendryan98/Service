<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.uty.servicee_093.MainActivity" android:background="@android:color/holo_blue_light">
    <ImageView
            android:src="@mipmap/indie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/imageView2"/>
    <TextView
            android:text="Fandy Hendryan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"/>
    <TextView
            android:text="follow me !!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginLeft="160dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_facebook" android:layout_weight="1"
                android:background="#2196F3" android:textColor="@android:color/background_light"
                android:textAllCaps="false"/>
        <Button
                android:text="instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_instagram" android:layout_weight="1"
                android:background="#E959E6" android:textColor="@android:color/primary_text_dark"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="159dp">
        <TextView
                android:text="= MUSIC ="
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textStyle="italic|bold"
                android:textColor="#000000" android:textSize="24sp" android:layout_marginLeft="145dp"
                android:layout_marginTop="100dp" android:layout_marginRight="100dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_play" android:layout_weight="1"
                android:background="@android:color/darker_gray" android:layout_marginLeft="20dp"/>
        <Button
                android:text="pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_pause" android:layout_weight="1"
                android:background="@android:color/darker_gray" android:paddingRight="10dp" android:paddingLeft="10dp"
                android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        <Button
                android:text="stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_stop" android:layout_weight="1"
                android:background="@android:color/darker_gray" android:layout_marginRight="20dp"/>
    </LinearLayout>
</LinearLayout>